name: ShipTrajectoryPrediction

conda_env: conda.yaml

entry_points:
  download_data:
    description: Download AIS data for 2015
    command: "python src/data_download.py"

  preprocess:
    description: Preprocess downloaded data into HDF5
    command: "python src/preprocess.py"

  train:
    parameters:
      arch: {type: str, default: "all"}
    description: Train and tune model(s) â€” use "all" to train every architecture
    command: "python src/train.py --arch {arch}"

  train-one:
    parameters:
      arch: {type: str, default: "lstm"}
    description: Train exactly one specific architecture (convenience entrypoint)
    command: "python src/train.py --arch {arch}"

  evaluate:
    description: Evaluate all trained models (or specify one with --arch)
    parameters:
      arch: {type: str, default: "all"}
    command: "python src/evaluate.py --arch {arch}"

  deploy:
    description: Run Gradio app for inference (uses best model from mlflow)
    command: "python src/app.py"
