name: ShipTrajectoryPrediction

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      config_path: {type: str, default: "config.yaml"}
      arch: {type: str, default: "all"}
    # CHANGED: Uses "-m src.main" so Python handles imports correctly
    command: "python -m src.main --config_path {config_path} --arch {arch}"

  evaluate:
    parameters:
      config_path: {type: str, default: "config.yaml"}
      arch: {type: str, default: "all"}
    # CHANGED: Uses "-m src.evaluate"
    command: "python -m src.evaluate --config_path {config_path} --arch {arch}"

  deploy:
    # CHANGED: Uses "-m src.inference.app"
    command: "python -m src.inference.app"
