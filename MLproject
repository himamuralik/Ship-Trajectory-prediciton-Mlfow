name: ShipTrajectoryPrediction

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      config_path: {type: str, default: "config.yaml"}
      arch: {type: str, default: "all"}
    command: "python src/main.py --config_path {config_path} --arch {arch}"

  evaluate:
    parameters:
      config_path: {type: str, default: "config.yaml"}
      arch: {type: str, default: "all"}
    command: "python src/evaluate.py --config_path {config_path} --arch {arch}"

  deploy:
    command: "python src/inference/app.py"
