name: ShipTrajectoryPrediction

conda_env: conda.yaml

entry_points:
  train:
    parameters:
      arch: {type: str, default: "all"}
      config_path: {type: str, default: "config.yaml"}
    command: "python -m src.main --arch {arch} --config_path {config_path}"

  evaluate:
    parameters:
      arch: {type: str, default: "all"}
    command: "python -m src.evaluation --arch {arch}"

  # Optional: add inference if you have app.py
  infer:
    command: "python -m src.inference.app"
